<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- DIALOG -->
    <style name="Dialog" parent="Theme.Design.Light">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <style name="AppThemeMyLight" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#0091ea</item>
    </style>


    <!-- TEXTVIEW -->
    <style name="TextRegular">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextBold">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextThin">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextLight">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextBlack">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextRegularSingleLine" parent="TextRegular">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextMediumSingleLine" parent="TextMedium">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextBoldSingleLine" parent="TextBold">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
